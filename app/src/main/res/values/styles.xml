<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dirty_orange</item>
        <item name="colorPrimaryDark">@color/beige</item>
        <item name="colorAccent">@color/pale</item>
    </style>

    <style name="TabsStyle" parent="@android:style/TextAppearance.Small">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="fontFamily">@font/iran_sans_fanum</item>
    </style>

    <style name="customRatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/yellow_live</item>
        <item name="colorControlActivated">@color/yellow_live</item>
    </style>

</resources>